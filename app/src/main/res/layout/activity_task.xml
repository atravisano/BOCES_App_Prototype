<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.anthony.travisano_boces1.TaskActivity"
    tools:layout_editor_absoluteY="81dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnImageTask"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/taskicon"
            tools:layout_editor_absoluteX="203dp"
            tools:layout_editor_absoluteY="94dp" />

        <ImageView
            android:id="@+id/imageAddStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:srcCompat="@android:drawable/ic_menu_camera" />
    </FrameLayout>

    <EditText
        android:id="@+id/txtTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/taskName"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style"
            android:text="Add Task"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="209dp" />

        <Button
            android:id="@+id/btnClearTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style"
            android:text="Clear Tasks"
            tools:layout_editor_absoluteX="221dp"
            tools:layout_editor_absoluteY="209dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="265dp" />


</LinearLayout>
